<p style="color: green"><%= notice %></p>

<div class="card text-center">
  <div class="card-header">
    <h5 class="card-title"><%= @friend.first_name%> <%= @friend.last_name%> </h5>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @friend.email%></p>
    <p class="card-text"><%= @friend.phone%></p>
    <p class="card-text"><%= @friend.twitter%></p>
    <% if user_signed_in? %>
      <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %> |
    <% end %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
    <br><br>
    <% if user_signed_in? %>
      <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
  <div class="card-footer text-muted">
   FriendsApp
  </div>
</div>
